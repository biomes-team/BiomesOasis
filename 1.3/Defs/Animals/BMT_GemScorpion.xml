<Defs>


  <ThingDef ParentName="BaseInsect">
    <defName>BMT_GemScorpion</defName>
    <label>gem scorpion</label>
    <description>This small scorpion is found in many colors. Its stinger is toxic.</description>
    <statBases>
      <MoveSpeed>3.75</MoveSpeed>
      <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.15</ArmorRating_Sharp>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <MarketValue>200</MarketValue>
      <LeatherAmount>0</LeatherAmount>
      <ToxicSensitivity>0.8</ToxicSensitivity>
    </statBases>
    <uiIconScale>2</uiIconScale>
    <tools>
	 <li>
        <label>left claw</label>
        <capacities>
          <li>Cut</li>
          <li>Poke</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
        <chanceFactor>0.2</chanceFactor>
      </li>
	 <li>
        <label>right claw</label>
        <capacities>
          <li>Cut</li>
          <li>Poke</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <label>stinger</label>
        <capacities>
          <li>BMT_ToxicSting</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>BMT_StingerGroup</linkedBodyPartsGroup>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.1</chanceFactor>
      </li>

    </tools>
    <race>
      <body>BMT_Scorpion</body>
      <predator>true</predator>
      <foodType>OmnivoreAnimal, OvivoreAnimal</foodType>
      <baseBodySize>0.2</baseBodySize>
      <baseHungerRate>0.10</baseHungerRate>
      <baseHealthScale>0.4</baseHealthScale>
      <useMeatFrom>Megaspider</useMeatFrom>
      <wildness>0.95</wildness>
      <trainability>Intermediate</trainability>
      <lifeExpectancy>6</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.08</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.25</minAge>
          <soundWounded>Pawn_Megascarab_Wounded</soundWounded>
          <soundDeath>Pawn_Megascarab_Death</soundDeath>
          <soundCall>Pawn_Megascarab_Call</soundCall>
          <soundAngry>Pawn_Megascarab_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>BMT_EggGemScorpionFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>14.0</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1~2</eggCountRange>
      </li>
    </comps>
	<tradeTags>
      <li>AnimalInsect</li>
    </tradeTags>
