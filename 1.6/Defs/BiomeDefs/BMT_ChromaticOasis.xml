<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<BiomeDef>
		<defName>BMT_ChromaticOasis</defName>
		<label>chromatic oasis</label>
		<description>A colorful patch of jungle around a lake in the middle of a desert. If a camel is the ship of the desert, is an oasis not just the island of the desert?</description>
		<workerClass>BiomesOasis.Planet.BiomeWorker_Oasis</workerClass>

		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.BiomesMap">

				<oasisOuterTerrain>Soil</oasisOuterTerrain>
				<oasisShoreTerrain>SoilRich</oasisShoreTerrain>
				<oasisShallowTerrain>WaterShallow</oasisShallowTerrain>
				<oasisDeepTerrain>WaterDeep</oasisDeepTerrain>

				<oasisCtrVarPct>20</oasisCtrVarPct>
				<oasisSizeMapPct>20~55</oasisSizeMapPct>
				
				<oasisShallowPct>0.6</oasisShallowPct>
				<oasisShorePct>0.3</oasisShorePct>
				<oasisSurroundingPct>0.2</oasisSurroundingPct>
				<oasisNoiseRange0_10>3~7</oasisNoiseRange0_10>
				<overlayTexturePath>BMT_Oasis/World/MapGraphics/Oasis</overlayTexturePath>
			</li>
		</modExtensions>

		<canAutoChoose>false</canAutoChoose>
		<allowRoads>false</allowRoads>
		<allowRivers>true</allowRivers>
		<animalDensity>2.2</animalDensity>
		<plantDensity>0.65</plantDensity>
		<settlementSelectionWeight>0.01</settlementSelectionWeight>
		<movementDifficulty>2</movementDifficulty>
		<!-- <texture>World/Biomes/desert</texture> -->
		<texture>BMT_Oasis/World/MapGraphics/OasisTemp</texture>
		<forageability>1</forageability>
		<foragedFood>RawBerries</foragedFood>
		<wildPlantRegrowDays>15</wildPlantRegrowDays>
		<maxFishPopulation>720</maxFishPopulation>
		<fishTypes MayRequire="Ludeon.RimWorld.Odyssey">
			<freshwater_Common>
				<BMT_Fish_Mirrortail MayRequire="Ludeon.RimWorld.Odyssey">1</BMT_Fish_Mirrortail>
				<BMT_Fish_Bluefin MayRequire="Ludeon.RimWorld.Odyssey">.7</BMT_Fish_Bluefin>
			</freshwater_Common>
			<freshwater_Uncommon>
				<BMT_Fish_RainbowTrout MayRequire="Ludeon.RimWorld.Odyssey">1</BMT_Fish_RainbowTrout>
			</freshwater_Uncommon>
			<saltwater_Common>
				<BMT_Fish_Bluefin MayRequire="Ludeon.RimWorld.Odyssey">1</BMT_Fish_Bluefin>
			</saltwater_Common>
			<saltwater_Uncommon>
				<BMT_Fish_RainbowTrout MayRequire="Ludeon.RimWorld.Odyssey">1</BMT_Fish_RainbowTrout>
			</saltwater_Uncommon>
			<rareCatchesSetMaker MayRequire="Ludeon.RimWorld.Odyssey">RareFishingCatches_Tropical</rareCatchesSetMaker>
		</fishTypes>
		
		<soundsAmbient>
