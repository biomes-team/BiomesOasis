				<label>fangs</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>15</power>
				<cooldownTime>2.3</cooldownTime>
				<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
				<surpriseAttack>
