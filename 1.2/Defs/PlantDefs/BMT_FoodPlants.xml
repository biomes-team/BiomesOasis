<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 

<ThingDef ParentName="PlantBase">
	<defName>BMT_AquamelonPlant</defName>
	<label>aquamelon</label>
	<description>A large melon that grows near water.</description>
	<statBases>
		<MaxHitPoints>120</MaxHitPoints>
		<Nutrition>0.35</Nutrition>
	</statBases>
	<graphicData>
		<graphicClass>Graphic_Random</graphicClass>
		<texPath>BMT_Oasis/Plant/Aquamelon/Aquamelon_Mature</texPath>
		<shadowData>
			<volume>(0.55, 0.2, 0.2)</volume>
			<offset>(0,0,-0.25)</offset>
		</shadowData>
	</graphicData>
	<selectable>true</selectable>
	<neverMultiSelect>false</neverMultiSelect>
	<fillPercent>0.20</fillPercent>
	<pathCost>30</pathCost>
	<plant>
		<fertilityMin>0.5</fertilityMin>
		<fertilitySensitivity>0.5</fertilitySensitivity>
		<growDays>6</growDays>
		<!-- <leaflessGraphicPath>Things/Plant/BerryPlant_Leafless</leaflessGraphicPath> -->
		<immatureGraphicPath>BMT_Oasis/Plant/Aquamelon/Aquamelon_Immature</immatureGraphicPath>
		<harvestYield>8</harvestYield>
		<harvestWork>250</harvestWork>
		<harvestTag>Standard</harvestTag>
		<harvestAfterGrowth>0.30</harvestAfterGrowth>
		<harvestedThingDef>BMT_Aquamelon</harvestedThingDef>
		<wildClusterRadius>5</wildClusterRadius>
		<wildClusterWeight>250</wildClusterWeight>
		<visualSizeRange>0.95~1.7</visualSizeRange>
		<topWindExposure>0.3</topWindExposure>
		<wildOrder>2</wildOrder>
		<purpose>Food</purpose>
		<sowTags>
			<li>Ground</li>
		</sowTags>
		<mustBeWildToSow>true</mustBeWildToSow>
		<sowMinSkill>5</sowMinSkill>
	</plant>
</ThingDef>



  <ThingDef ParentName="PlantBase">
    <defName>BMT_DuneDelightPlant</defName>
    <label>dune delight</label>
    <description>A rare plant that produces a particularly delicious fruit. Impossible to cultivate.</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Nutrition>0.3</Nutrition>
    </statBases>
    <graphicData>
		<texPath>BMT_Oasis/Plant/DuneDelight/DuneDelight</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
	<neverMultiSelect>false</neverMultiSelect>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.70</fertilityMin>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>BMT_DuneDelight</harvestedThingDef>
      <harvestYield>1</harvestYield>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <topWindExposure>0.35</topWindExposure>
      <growDays>8</growDays>
      <immatureGraphicPath>BMT_Oasis/Plant/DuneDelight/DuneDelight_Immature</immatureGraphicPath>
      <visualSizeRange>0.5~1.5</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>





</Defs>
