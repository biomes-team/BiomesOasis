<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 

<!-- reeds -->
 
<ThingDef ParentName="PlantBase">
	<defName>BMT_Papyrus</defName>
    <label>papyrus</label>
    <description>A tall, aquatic sedge that forms large stands in shallow water.</description>
    <statBases>
		<MaxHitPoints>90</MaxHitPoints>
		<Nutrition>0.2</Nutrition>
    </statBases>
    <pathCost>20</pathCost>
    <graphicData>
		<graphicClass>Graphic_Random</graphicClass>
		<texPath>BMT_Oasis/Plant/Papyrus</texPath>
    </graphicData>
    <modExtensions>
        <li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
            <allowInFreshWater>true</allowInFreshWater>
            <allowInSaltWater>false</allowInSaltWater>
            <allowInShallowWater>true</allowInShallowWater>
            <allowInDeepWater>false</allowInDeepWater>
            <allowOnLand>true</allowOnLand>
        </li>
    </modExtensions>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <plant>
		<fertilityMin>0.3</fertilityMin>
		<fertilitySensitivity>1</fertilitySensitivity>
		<growDays>3</growDays>
		<!-- <maxMeshCount>4</maxMeshCount> -->
		<visualSizeRange>1.2~2.0</visualSizeRange>
		<topWindExposure>0.2</topWindExposure>
		<wildClusterRadius>4</wildClusterRadius>
		<wildClusterWeight>250</wildClusterWeight>
		<wildOrder>2</wildOrder>
        <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
    </plant>
  </ThingDef>


