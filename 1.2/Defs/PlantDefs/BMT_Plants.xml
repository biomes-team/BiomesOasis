<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="BushBase">
    <defName>BMT_SundewPlant</defName>
    <label>sundew</label>
    <description>Sundew. TODO: Description</description>
    <altitudeLayer>Building</altitudeLayer>
    <graphicData>
      <texPath>BMT_Oasis/Plant/Sundew</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <!-- <drawSize>1.6</drawSize> -->
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
        <offset>(0,0,-0.42)</offset>
      </shadowData>
    </graphicData>
    <plant>
      <growDays>6</growDays>
      <visualSizeRange>1.0~1.6</visualSizeRange>
    </plant>
  </ThingDef>
  
  
  <ThingDef ParentName="PlantBase">
    <defName>BMT_Caladium</defName>
    <label>caladium</label>
    <description>A decorative plant with broad leaves.</description>
    <statBases>
      <Beauty>8</Beauty>
      <Nutrition>0.1</Nutrition>
    </statBases>
    <graphicData>
      <texPath>BMT_Oasis/Plant/Caladium</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <uiIconScale>2.0</uiIconScale>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <sowWork>440</sowWork> 
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.1</topWindExposure>
      <growDays>5</growDays>
      <visualSizeRange>0.8~1.6</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>

</Defs>
