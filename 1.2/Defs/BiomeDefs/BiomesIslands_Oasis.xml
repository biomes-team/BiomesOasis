      <li>
        <terrain>Mud</terrain>
        <min>10.0</min>
        <max>20.0</max>
      </li>
    </terrainsByFertility>
    <terrainPatchMakers>
	  <li>
		<perlinFrequency>0.035</perlinFrequency>
		<minFertility>20.0</minFertility>
		<thresholds>
			<li>
				<terrain>Mud</terrain>
				<min>5.0</min>
				<max>10.0</max>
			</li>
		</thresholds>
	  </li>
      <li>
        <perlinFrequency>0.02</perlinFrequency>
        <minFertility>10.0</minFertility>
        <maxFertility>20.0</maxFertility>
        <thresholds>
		<!--
