<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Cooking Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name="VCE_CookDessertMealBase" or @Name="VCE_CookComplexDessertMealBase" or @Name="VCE_CookGourmetDessertMealBase" or defName="VCE_CanFruit"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
						<li>BMT_Aquamelon</li>
						<li>BMT_DuneDelight</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name="VCE_CookDessertMealBase" or @Name="VCE_CookComplexDessertMealBase" or @Name="VCE_CookGourmetDessertMealBase" or defName="VCE_CanFruit"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>BMT_Aquamelon</li>
						<li>BMT_DuneDelight</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="VCE_CookDessertSimple" or defName="VCE_CookDessertSimpleBulk" or defName="VCE_CanFruit"]/ingredients/li/filter/thingDefs</xpath>
					<value>
						<li>BMT_Aquamelon</li>
						<li>BMT_DuneDelight</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="VCE_CookDessertFine" or defName="VCE_CookDessertFineBulk" or defName="VCE_CookDessertLavish" or defName="VCE_CookDessertLavishBulk" or defName="VCE_CookDessertGourmet"]/ingredients/li[@Name="Fruit"]/filter/thingDefs</xpath>
					<value>
						<li>BMT_Aquamelon</li>
						<li>BMT_DuneDelight</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="VCE_CanProduce"]/defaultIngredientFilter/disallowedThingDefs</xpath>
					<value>
						<li>BMT_Aquamelon</li>
						<li>BMT_DuneDelight</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="VCE_CanProduce"]/fixedIngredientFilter/disallowedThingDefs</xpath>
					<value>
						<li>BMT_Aquamelon</li>
						<li>BMT_DuneDelight</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>


